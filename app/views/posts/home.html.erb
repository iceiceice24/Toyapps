<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6 mb-4">
      <div class="card h-40 w-40" style= "margin-left: 10px;">
        <% if post.image.attached? %>
          <%= image_tag(post.image, class: "card-img-top", style: "height: 350px; width: 450px; object-fill: cover; ") %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.toyName %></h5>
          <p class="card-text"><%= post.content %> | <%= post.price %> | <%= post.email %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
