<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8">
    <%= form_for (current_user),  data: { turbolinks: true } do |f| %>
      <div class="form-floating mb-3">
        <%= f.text_field :name, class: "form-control", id: "floatingName", value: @user.name %>
        <%= f.label :name, "Name", class: "form-label", for: "floatingName" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", id: "floatingEmail", value: @user.email %>
        <%= f.label :email, "Email", class: "form-label", for: "floatingEmail" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", id: "floatingPassword" %>
        <%= f.label :password, "Password", class: "form-label", for: "floatingPassword" %>
      </div>

      <div class="d-grid">
        <%= f.submit 'Save', class: 'btn btn-primary btn-lg mb-3' %>
      </div>
    <% end %>

    <%= button_to 'Delete User', delete_user_path(@user), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure you want to delete your account?" } %>
  </div>
</div>
